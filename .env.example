# Environment Variables for Stayra
# Copy this file to .env and fill in the values

# ============================================================
# DATABASE (Required)
# ============================================================
# Development: SQLite
DATABASE_URL="file:./dev.db"
# Production: PostgreSQL
# DATABASE_URL="postgresql://user:password@host:5432/stayra?sslmode=require"

# ============================================================
# AUTHENTICATION (Required)
# ============================================================
# JWT secret - must be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production-use-random-string"
JWT_EXPIRES_IN="7d"

# ============================================================
# OAUTH - Google (Required for Google login)
# ============================================================
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================================
# NEXTAUTH (Required)
# ============================================================
# Your application URL (no trailing slash)
# Development: http://localhost:3000
# Production: https://stayra.com
NEXTAUTH_URL="http://localhost:3000"

# NextAuth secret - must be at least 32 characters
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-random-32-character-secret"

# ============================================================
# APPLICATION (Required)
# ============================================================
# Your public application URL (no trailing slash)
# This is used for email/SMS links
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================================
# ANALYTICS (Optional - PostHog)
# ============================================================
# Get from: https://posthog.com/
# POSTHOG_API_KEY=""
# POSTHOG_HOST="https://us.i.posthog.com"

# ============================================================
# EMAIL - SMTP (Optional)
# ============================================================
# Required for password reset emails
# For Gmail: Use App Password from https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-16-character-app-password"
SMTP_FROM="Stayra <noreply@stayra.com>"

# ============================================================
# SMS - Twilio (Optional)
# ============================================================
# Required for OTP login
# Get credentials from https://www.twilio.com/console
# TWILIO_ACCOUNT_SID=""
# TWILIO_AUTH_TOKEN=""
# TWILIO_PHONE_NUMBER=""

# ============================================================
# DEPLOYMENT (Production Only)
# ============================================================
# Set to 'production' in production
NODE_ENV="development"
